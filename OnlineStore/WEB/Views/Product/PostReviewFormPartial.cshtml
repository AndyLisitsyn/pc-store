@using Services.Dto
@model ReviewDto

<form asp-action="PostReview"
      id="postReviewForm"
      data-ajax="true"
      data-ajax-method="POST"
      data-ajax-success="succeeded"
      data-ajax-failure="failed">
    @Html.HiddenFor(model => model.ProductId)
    <p class="h4 text-center mb-5">Post Your Review</p>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label asp-for="DesiredDisplayName" class="form-label"></label>
                <input asp-for="DesiredDisplayName" id="name" class="form-control" />
                <span asp-validation-for="DesiredDisplayName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label asp-for="Rating" class="form-label"></label>
                <select asp-for="Rating" id="rating" class="form-select">
                    <option value="5">★★★★★ (5/5)</option>
                    <option value="4">★★★★☆ (4/5)</option>
                    <option value="3">★★★☆☆ (3/5)</option>
                    <option value="2">★★☆☆☆ (2/5)</option>
                    <option value="1">★☆☆☆☆ (1/5)</option>
                </select>
            </div>
        </div>
    </div>
    <div class="form-group mt-2">
        <label asp-for="Text" class="form-label"></label>
        <textarea asp-for="Text" id="text" class="form-control" rows="8"></textarea>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group mt-3">
        <button id="submit" type="submit" class="btn btn-secondary">Post Review</button>
    </div>
    <br />
</form>

<script>
    succeeded = function (data, status, xhr) {
        $("#postReviewForm").html(data);
        //$("#postReviewForm").fadeOut(3000);
    }
    failed = function (xhr) {
        console.log("failed");
    }
</script>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
